{
  "name": "Analog.Cafe.next",
  "version": "0.0.1",
  "description": "Front-end SSR for Analog.Cafe built with Next.js",
  "main": "index.js",
  "author": "dmitrizzle",
  "license": "MPL-2.0",
  "private": true,
  "scripts": {
    "dev": "node server.js",
    "start": "NODE_ENV=production node server.js",
    "test": "NODE_ENV=test jest",
    "build": "next build",
    "size": "next build && size-limit",
    "lint": "eslint \"./**/*.js\"",
    "lint:fix": "eslint --fix \"./**/*.js\""
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint:fix"
    }
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/jest.setup.js"
    ]
  },
  "size-limit": [
    {
      "webpack": true,
      "path": ".next/static/chunks/*.js",
      "limit": "130 KB"
    }
  ],
  "dependencies": {
    "@roast-cms/french-press-editor": "^12.0.0",
    "@roast-cms/image-froth": "^0.1.0",
    "@zeit/next-css": "^1.0.1",
    "axios": "^0.19.0",
    "compression": "^1.7.4",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "express": "^4.17.1",
    "http-proxy-middleware": "^0.20.0",
    "isomorphic-unfetch": "^3.0.0",
    "jest": "^24.8.0",
    "keycode": "^2.2.0",
    "localforage": "^1.7.3",
    "lodash": "^4.17.11",
    "next": "9.0.3",
    "next-seo": "^2.1.1",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-lazyload": "^2.6.1",
    "react-redux": "^7.0.3",
    "react-test-renderer": "^16.9.0",
    "react-textarea-autosize": "^7.1.0",
    "redux": "^4.0.1",
    "redux-devtools-extension": "^2.13.8",
    "redux-thunk": "^2.3.0",
    "styled-components": "^4.2.0",
    "styled-reset": "^3.0.2",
    "titlecase": "^1.1.3",
    "typeface-exo-2": "^0.0.72",
    "typeface-lora": "^0.0.72",
    "url-pattern": "^1.0.3"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "babel-plugin-styled-components": "^1.10.0",
    "eslint": "^6.3.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "file-loader": "^4.0.0",
    "husky": "^3.0.3",
    "size-limit": "2.0.2",
    "url-loader": "2.1.0"
  }
}

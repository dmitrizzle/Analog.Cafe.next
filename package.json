{
  "name": "Analog.Cafe.next",
  "version": "0.0.1",
  "description": "Front-end SSR for Analog.Cafe built with Next.js",
  "main": "index.js",
  "author": "dmitrizzle",
  "license": "MPL-2.0",
  "private": true,
  "scripts": {
    "analyze": "ANALYZE=true yarn build",
    "build": "next build",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run:travis": "npx cypress run  --spec \"cypress/integration/core/**/*\"",
    "cy:start-server-and-test": "npx start-server-and-test start :3000 cy:run",
    "cy:start-server-and-test:travis": "npx start-server-and-test start :3000 cy:run:travis",
    "cy:verify": "cypress verify",
    "dev": "node server.js",
    "lint": "eslint \"./**/*.js\"",
    "lint:fix": "eslint --fix \"./**/*.js\"",
    "start": "NODE_ENV=production node server.js",
    "size": "next build && size-limit",
    "test:cypress:travis": "yarn build && cross-env STRIP_SERVER_CONSOLE=true yarn cy:start-server-and-test:travis",
    "test:travis": "npm-run-all --parallel --silent test:unit test:cypress:travis",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint:fix"
    }
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/jest.setup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "cypress"
    ]
  },
  "size-limit": [
    {
      "webpack": true,
      "path": ".next/static/chunks/*.js",
      "limit": "130 KB"
    }
  ],
  "dependencies": {
    "@roast-cms/french-press-editor": "^12.0.0",
    "@roast-cms/image-froth": "^0.1.0",
    "@zeit/next-css": "^1.0.1",
    "axios": "^0.19.0",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "http-proxy-middleware": "^0.20.0",
    "isomorphic-unfetch": "^3.0.0",
    "keycode": "^2.2.0",
    "localforage": "^1.7.3",
    "lodash": "^4.17.11",
    "next": "^9.1.0",
    "next-compose-plugins": "^2.2.0",
    "next-offline": "^4.0.6",
    "next-seo": "^2.1.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-ga": "^2.7.0",
    "react-lazyload": "^2.6.1",
    "react-redux": "^7.0.3",
    "react-textarea-autosize": "^7.1.0",
    "redux": "^4.0.1",
    "redux-devtools-extension": "^2.13.8",
    "redux-thunk": "^2.3.0",
    "styled-components": "^4.2.0",
    "styled-reset": "^4.0.2",
    "titlecase": "^1.1.3",
    "typeface-exo-2": "^0.0.72",
    "typeface-lora": "^0.0.72",
    "url-pattern": "^1.0.3"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^9.1.1",
    "babel-eslint": "^10.0.1",
    "babel-plugin-dynamic-import-node": "^2.3.0",
    "babel-plugin-styled-components": "^1.10.0",
    "cross-env": "^6.0.3",
    "cypress": "^3.4.1",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.4.3",
    "eslint": "^6.3.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "file-loader": "^4.0.0",
    "husky": "^3.0.3",
    "jest": "^24.8.0",
    "jest-styled-components": "^6.3.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "redux-mock-store": "^1.5.3",
    "size-limit": "^2.1.6",
    "start-server-and-test": "^1.10.6",
    "url-loader": "^2.2.0"
  }
}
